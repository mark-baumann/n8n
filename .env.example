# == LLM / Embeddings ==
OPENAI_API_KEY=
MODEL_NAME=gpt-4o-mini
EMBEDDINGS_PROVIDER=openai   # openai | hf
EMBEDDING_MODEL=text-embedding-3-small  # bei hf: sentence-transformers/all-MiniLM-L6-v2

# == RAG ==
VECTORSTORE_BACKEND=qdrant   # qdrant | faiss
QDRANT_URL=https://<cluster-id>.<region>.aws.cloud.qdrant.io:6333
QDRANT_API_KEY=
QDRANT_COLLECTION=chatmitpdf
INDEX_DIR=data/index/faiss
DOCS_DIR=data/docs
CHUNK_SIZE=1000
CHUNK_OVERLAP=150
TOP_K=4

# == Router ==
ROUTER_MODEL=gpt-4o-mini

# == Memory / Checkpointer ==
CHECKPOINTER_BACKEND=memory  # memory | sqlite
SQLITE_PATH=data/checkpoints/langgraph.sqlite

# == Websuche ==
ENABLE_WEBSEARCH=false
WEBSEARCH_BACKEND=duckduckgo   # duckduckgo | tavily
TAVILY_API_KEY=

# == Server ==
HOST=127.0.0.1
PORT=8000
